{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es6",
    "target": "ES2017",
    "lib": ["ES2017"],
    "alwaysStrict": true,
    "allowJs": true,
    "strict": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./src/*.ts", "./src/**/*.ts"],
  "exclude": ["node_modules/", "dist/"]
}
